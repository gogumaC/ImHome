<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/drawable_r10"
        android:backgroundTint="#F3F1F1"
        android:padding="10dp">

        <ImageView
            android:id="@+id/itemFeedImage"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="5dp"
            app:layout_constraintDimensionRatio="w,1:1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/itemFeedUserInfo" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/itemFeedUserInfo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/drawable_r10"
            android:backgroundTint="@color/white"
            android:paddingStart="15dp"
            android:paddingTop="10dp"
            android:paddingEnd="15dp"
            android:paddingBottom="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/itemFeedNickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="집러버1"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/itemFeedDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="22.00.00"
                app:layout_constraintBottom_toBottomOf="@+id/itemFeedNickname"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/itemFeedNickname" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/itemFeedContents"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:minHeight="25dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="글글글글"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/itemFeedImage" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>